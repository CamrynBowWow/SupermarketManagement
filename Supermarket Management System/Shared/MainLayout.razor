@inherits LayoutComponentBase

<header class="site-header sticky-top py-1">
    <nav class="navbar navbar-expand-lg fixed-top navbar-dark bg-dark">

        <div class="container-fluid">

            <a class="navbar-brand" href="#" aria-label="Product" @onclick="ToggleNavMenu">
                <svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" fill="none" stroke="currentColor" stroke-linecap="round" stroke-linejoin="round" stroke-width="2" class="d-block mx-auto" role="img" viewBox="0 0 24 24"><title>Product</title><circle cx="12" cy="12" r="10"/><path d="M14.31 8l5.74 9.94M9.69 8h11.48M7.38 12l5.74-9.94M9.69 16L3.95 6.06M14.31 16H2.83m13.79-4l-5.74 9.94"/></svg>
            </a>
        
            <button class="navbar-toggler p-0 border-0" type="button" @onclick="ToggleNavMenu">
                <span class="navbar-toggler-icon"></span>
            </button>

            <div class="@NavMenuCssClass">

                <ul class="navbar-nav me-auto mb-2 mb-lg-0">

                    <li class="nav-item">
                        <NavLink class="nav-link" href="" Match="NavLinkMatch.All" @onclick="ToggleNavMenu">
                            <span class="oi oi-home" aria-hidden="true"></span> Home
                        </NavLink>
                    </li>

                    <li class="nav-item">
                        <NavLink class="nav-link" href="cashier_console" @onclick="ToggleNavMenu">
                            <span class="oi oi-plus" aria-hidden="true"></span> Sell
                        </NavLink>
                    </li>

                    <li class="nav-item">
                        <NavLink class="nav-link" href="categories" @onclick="ToggleNavMenu">
                            <span class="oi oi-plus" aria-hidden="true"></span> Categories
                        </NavLink>
                    </li>

                    <li class="nav-item">
                        <NavLink class="nav-link" href="products" @onclick="ToggleNavMenu">
                            <span class="oi oi-plus" aria-hidden="true"></span> Products
                        </NavLink>
                    </li>

                    <li class="nav-item">
                        <NavLink class="nav-link" href="transactions" @onclick="ToggleNavMenu">
                            <span class="oi oi-plus" aria-hidden="true"></span> Reports
                        </NavLink>
                    </li>

                </ul>

                <LoginDisplay></LoginDisplay>

            </div>

        </div>
    
    </nav>
</header>
<br/>
<main class="content">
    <br/>
    <div class="bg-white p-2 rounded">
        @Body
    </div>
</main>


@code{
    bool collapseNavMenu = true;

    private bool expandSubNavActivities;
    private bool expandSubNavReports;

    string baseMenuClass = "navbar-collapse offcanvas-collapse";

    string NavMenuCssClass => baseMenuClass + (collapseNavMenu ? " collapse" : "");

    void ToggleNavMenu()
    {
        CollapseSubNavMenu();
    }

    void CollapseSubNavMenu()
    {
        expandSubNavActivities = false;
        expandSubNavReports = false;
        collapseNavMenu = !collapseNavMenu;
    }
}